#include <stdio.h>
int main() {
    int a,b,c;
    printf("Enter the size of the array :");
    scanf("%d",&a);
    int arr[a];
    for (int i=0;i<(a-1);i++)
    {
        printf("Enter the number at index %d :",i);
        scanf("%d",&b);
        arr[i]=b;
    }
    printf("Enter the number at index %d :",(a-1));
    scanf("%d",&c);
    for (int j=(a-1);j>0;j--)
    {
        arr[j]=arr[j-1];
    }
    arr[0]=c;
    for (int k=0;k<a;k++)
    {
        printf("Now the array contains %d at %d index.\n",arr[k],k);
    }
    return 0;
}
