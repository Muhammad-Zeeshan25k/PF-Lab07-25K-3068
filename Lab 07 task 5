#include <stdio.h>
int main(){
    int a,b,d;
    printf("Enter the number of numbers you are going to enter :");
    scanf("%d",&a);
    int arr[a];
    for (int i=0;i<a;i++)
    {
        printf("Enter the number at index %d :",i);
        scanf("%d",&b);
        arr[i]=b;
    }
    int smaller = arr[0],greater = arr[0];
    for (int j=0;j<a;j++)
    {
        if (arr[j]>greater){
            greater=arr[j];
        }
        if (arr[j]<smaller){
            smaller=arr[j];
        }
    }
    d=greater-smaller;
    printf("The difference between the smallest and largest number entered is %d",d);
    return 0;
}
